changed_files=$(git diff HEAD origin/main --name-only | grep -E '\.tsx?$' | sort -u)
if [ -z "$changed_packages" ]; then
  echo "[pre-push] Changed TS files from HEAD to origin/main: none"
else
  echo "[pre-push] Changed TS files from HEAD to origin/main: ${changed_files[*]}"
fi

if [ -n "$changed_files" ]; then
  echo "[pre-push] Running ESLint on changed files..."
  pnpm run lint $changed_files
  echo "[pre-push] Done linting changed files..."
fi

changed_packages=$(echo "$changed_files" | cut -d'/' -f2 | sort -u)
if [ -z "$changed_packages" ]; then
  echo "[pre-push] Changed packages: none"
else
  echo "[pre-push] Changed packages: ${changed_packages[*]}"
fi
for package in $changed_packages; do
  if [ -d "packages/$package" ]; then
    echo "[pre-push] Running tests for package: $package"
    pnpm --filter "$package" run test:unit
  fi
done
