{
  "name": "@chat-app/frontend",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "symlink-tsconfig": "f() { ln --force --symbolic ./tsconfig-\"$1\".json ./tsconfig.json; }; f $@",
    "start": "pnpm run symlink-tsconfig dev && REACT_APP_API_BASE_URL=http://localhost DISABLE_ESLINT_PLUGIN=true react-scripts start",
    "build": "pnpm run symlink-tsconfig prod && DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "test": "jest",
    "test_": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@chat-app/contracts": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.13",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@chat-app/mocks": "workspace:*",
    "@swc/jest": "^0.2.37",
    "@tsconfig/create-react-app": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "fp-ts": "^2.16.9",
    "io-ts": "^2.2.21",
    "jest": "^29.7.0",
    "msw": "^2.6.0",
    "playwright": "^1.48.2",
    "serve": "^14.2.4",
    "typescript": "^5.6.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": [
      "./public"
    ]
  }
}
