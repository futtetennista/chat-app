{
  "extends": [
    "../tsconfig-base.json",
    "@tsconfig/create-react-app/tsconfig.json"
  ],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "isolatedDeclarations": false,
    "baseUrl": ".",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "react-jsx",
    "outDir": "./build",
    "paths": {
      "@chat-app/contracts/*": [
        "../contracts/src/*"
      ],
      "@chat-app/mocks/*": [
        "../mocks/src/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./build",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "references": [
    {
      "path": "../contracts"
    },
    {
      "path": "../mocks"
    }
  ]
}
