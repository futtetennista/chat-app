{
  "extends": [
    "../tsconfig.base.json",
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "package.json",
    "./src/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../contracts"
    },
    {
      "path": "../mocks"
    }
  ]
}
