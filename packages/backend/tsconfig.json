{
  "extends": [
    "../tsconfig.json",
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@contracts/*": [
        "../contracts/src/*"
      ],
      "@mocks/*": [
        "../mocks/src/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "**/*.test.ts",
  ],
  "references": [
    {
      "path": "../contracts"
    },
    {
      "path": "../mocks"
    }
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
