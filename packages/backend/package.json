{
  "name": "@chat-app/backend",
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.2",
  "private": true,
  "scripts": {
    "bundle:before": "tsx ./scripts/cli.ts config:create --local-dev",
    "bundle:local": "tsx ./scripts/cli.ts bundle non-prod",
    "bundle:clean": "rm -rf $(jq -r .compilerOptions.outDir < tsconfig.json)",
    "compile": "tsc -b",
    "c": "pnpm run compile",
    "start:local": "CHAT_APP_CONFIG_JSON=$(pnpm -s run bundle:before) sam local start-api --template-file aws-sam.template.yml --warm-containers EAGER --parameter-overrides \"handler=$(jq -r .compilerOptions.outDir < tsconfig.json)/non-prod/index.js\"",
    "start": "pnpm run start:local",
    "start:bundle": "pnpm run bundle:clean && pnpm run bundle:local && pnpm run start:local",
    "watch": "nodemon",
    "__watch_description": "See nodemon.json to see how nodemon is configured.",
    "test": "pnpm run test:unit",
    "test:unit": "jest --passWithNoTests"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@aws-lambda-powertools/logger": "^2.10.0",
    "@chat-app/contracts": "workspace:*",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.5",
    "openai": "^4.71.1"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@chat-app/mocks": "workspace:*",
    "@commander-js/extra-typings": "^12.1.0",
    "@swc/jest": "catalog:jest",
    "@tsconfig/node20": "catalog:typescript-node20",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "catalog:typescript-node20",
    "commander": "^12.1.0",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "fp-ts": "catalog:",
    "io-ts": "catalog:",
    "jest": "catalog:jest",
    "msw": "catalog:",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  }
}
