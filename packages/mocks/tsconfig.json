{
  "extends": [
    "../tsconfig.base.json",
    "@tsconfig/recommended/tsconfig.json"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "preserve",
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "@chat-app/contracts/*": [
        "../contracts/src/*"
      ],
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build/**/*",
    "./dist/**/*",
  ],
  "references": [
    {
      "path": "../contracts"
    }
  ]
}
