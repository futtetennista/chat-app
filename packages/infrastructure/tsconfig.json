{
  "extends": ["../tsconfig.base.json", "@tsconfig/node20/tsconfig.json"],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@bootstrap/*": ["./src/bootstrap/*"]
    }
  },
  "include": ["./src/**/*", "./scripts/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
